<!-- Section de la carte -->
<div id="plan" style="display: none; padding-top: 20px;">
    <h2>Plan de l'hôtel</h2>
    <div id="map"></div>
</div>

<script>
    // Fonction pour afficher la carte
    function showMap() {
        // Afficher la carte
        document.getElementById("plan").style.display = "block";

        // Défilement automatique vers le plan
        window.scrollTo({
            top: document.getElementById("plan").offsetTop,
            behavior: "smooth"
        });

        const map = L.map('map').setView([33.8869, 9.5375], 12); // Coordonnées fictives de Tunis

        // Ajouter la couche OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Ajouter un marqueur à la carte
        L.marker([33.8869, 9.5375]).addTo(map)
            .bindPopup("Hôtel Fictif à Tunis")
            .openPopup();
    }
</script>

