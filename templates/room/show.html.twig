{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <style>
        /* Centrer le contenu verticalement et horizontalement */
        .container {
            display: flex;
            flex-direction: column;
            align-items: center; /* Centrer horizontalement */
            justify-content: center; /* Centrer verticalement */
            min-height: 100vh; /* Prendre toute la hauteur de l'écran */
            padding: 20px;
        }

        /* Style pour le titre */
        h1 {
            font-size: 2rem;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Style pour le tableau */
        .table {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 900px;
            text-align: left;
            margin-bottom: 20px;
            border-spacing: 10px 5px; /* Espacement entre les lignes et colonnes */
        }

        /* Style pour les cellules du tableau */
        .table th {
            width: 200px;
            padding-right: 10px;
            font-weight: bold;
            color: #333;
        }

        .table td {
            padding-left: 10px;
            color: #555;
        }

        /* Style de l'image de la chambre */
        .room-image {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        /* Conteneur pour les boutons */
        .buttons-container {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        /* Style des boutons */
        a {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            color: white;
            background-color: #007bff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        a:hover {
            background-color: #0056b3;
        }

        /* Positionner "Back to list" en haut à gauche */
        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            font-size: 1rem;
            color: white;
            background-color: #007bff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .back-button:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="container">
        <a href="{{ path('app_room_index') }}" class="back-button">Back to list</a>

        <h1>Room Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ room.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ room.price }}</td>
                </tr>
                <tr>
                    <th>Size</th>
                    <td>{{ room.size }}</td>
                </tr>
                <tr>
                    <th>Bed Type</th>
                    <td>{{ room.bedType }}</td>
                </tr>
                <tr>
                    <th>Max Occupancy</th>
                    <td>{{ room.maxOccupancy }}</td>
                </tr>
                <tr>
                    <th>Features</th>
                    <td>{{ room.features }}</td>
                </tr>
                <tr>
                    <th>Bathroom Features</th>
                    <td>{{ room.bathroomFeatures }}</td>
                </tr>
                <tr>
                    <th>Furnishings</th>
                    <td>{{ room.furnishings }}</td>
                </tr>
                <tr>
                    <th>Services</th>
                    <td>{{ room.services }}</td>
                </tr>
                <tr>
                    <th>Internet</th>
                    <td>{{ room.internet }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ room.phone }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <!-- Affichage de l'image de la chambre -->
                        <img src="{{ asset('images/rooms/' ~ room.imageFilename) }}" alt="{{ room.name }}" class="room-image">
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="buttons-container">
            <a href="{{ path('app_room_edit', {'id': room.id}) }}">Edit</a>
            {{ include('room/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
